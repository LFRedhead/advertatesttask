
<!DOCTYPE html>
<html>


<head>
    <title>Lycky Help - @ViewBag.Title</title>
    <meta charset="utf-8" />


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-image: url('../images/modern-technological-elements-with-transparent-background_1035-7108.jpg');
            opacity: 0.85;
        }
        .semiopacity {
            background: #0078c9;
            padding: 5px;
            opacity: 0.7;
            filter: alpha(Opacity=70);
            color: #fff;
            text-align: center;
        }
    </style>

</head>

<body>

    <div id="sidebar">
        <div style="text-align:center; color: darkcyan;">Anonimus</div>
        <ul class="nav">
            <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
            <li><a asp-controller="Account" asp-action="Register">Register</a></li>
            @*<li><a asp-controller="Home" asp-action="Order">Order</a></li>*@
        </ul>
    </div>

    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button id="sidebarToggle" class="btn btn-primary btn-sm">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </li>
                </ul>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Lucky's Help</a>
                <ul class="nav navbar-nav navbar-right">
                   <li>
                       <a href="#" class="btn btn-sm btn-info">
                           <i class="fa fa-save"></i> Save
                       </a>
                   </li>
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-print"></i> Print
                        </a>
                    </li>
                </ul>
            </div>
            </nav>
        <div id="main" class="container-fluid">
            
            <br/>
          @RenderBody()
            
        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
           <h4 class="text-center text-info"> &copy; TPO Tales prodactions. </h4>
            </div>
         </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("scripts", false)
</body>

</html>