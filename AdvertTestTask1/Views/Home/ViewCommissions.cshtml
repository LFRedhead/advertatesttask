@model IEnumerable<AdvertTestTask1.ViewModels.Commission>
@{
    Layout = "_LayoutReg";
}

@{ 
    ViewBag.Title = "Home Paged";
}

<div class="row">
    <div class="col-md-6">
        <a asp-action="Order" class="btn btn-success">Order a Commission</a>
      
    </div>

    <div class="col-md-6">
        <h2>Dashboard</h2>
        
        @foreach (var item in Model)
        {
            <div>
            
            <b> @item.CommUser</b> <br/> @item.OrderText <br /> 
                @*<img style='width:100px; height:100px;' src="data:images/png;base64,@(Convert.ToBase64String(item.Avatar))" />*@
            </div>
            <div>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.CommissionId">Read more</a> |
                @*<a asp-action="Edit" asp-controller="Home" asp-route-id="@item.CommissionId">Edit</a> |*@
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.CommissionId">Delete</a>
            </div>
           
            
        }
        

    </div>

</div>