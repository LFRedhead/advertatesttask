@model AdvertTestTask1.ViewModels.Commission
@{
    Layout = "_LayoutReg";
}
@{ 
    ViewBag.Title = "Delete Commission";
}
<div>
    <dl class="dl-horizontal">
        <dt>User</dt>
        <dd>
            @Html.DisplayFor(model => model.CommUser)
        </dd>

        <dt>Description</dt>
        <dd>
            @Html.DisplayFor(model => model.OrderText)
        </dd>

        <dt>Price</dt>
        <dd>
            @Html.DisplayFor(model => model.CommissionPrice)
        </dd>

        <dt>E-mail</dt>
        <dd>
            @Html.DisplayFor(model => model.CommEmail)
        </dd>

    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>